/* pages/home/index.wxss */
.body {
  margin: 0;
  padding: 0;

  background: linear-gradient(
    125deg,
    rgb(76, 180, 233) 15%,
    rgb(164, 210, 219) 85%
  );

  width: 100vw;
  height: 100vh;
  z-index: -1;
}
.table {
  position: absolute;
  top: 10%;
  left: 10%;
  z-index: 50;
  width: 80%;
  height: 80%;
  border-radius: 8rpx;
  border: solid rgb(0, 0, 0, 0.2) 1rpx;
  background-color: rgba(0, 0, 0, 0.2);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}
.title {
  width: 100%;
  height: 35%;

  /* border: solid black 1rpx; */

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.features_container {
  width: 100%;
  height: 65%;

  /* border: solid black 1rpx; */

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.slogan {
  font-size: 26px;
  color: #404040;
  line-height: 70rpx;
}
.loginbtn {
  width: 140rpx;
  height: 140rpx;
  border: solid rgb(255, 255, 255, 0.7) 3rpx;
  box-shadow: 0 20rpx 80rpx rgb(255, 255, 255, 0.2);
  border-radius: 50%;
}
.prompt {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  /* border: solid black 1rpx; */

  color: rgb(255, 255, 255, 0.7);
  font-family: 宋体;
  font-size: 48rpx;
  text-align: center;

  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  align-items: center;
  justify-content: center;

  /* 波纹效果 */
  animation: pulse 2s infinite;
}
@keyframes pulse {
  50% {
    box-shadow: 0 0 0 25rpx rgb(255, 255, 255, 0.1);
  }
  100% {
    box-shadow: 0 0 0 15rpx rgb(255, 255, 255, 0);
  }
}
.ava {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.features {
  border-bottom: solid rgb(255, 255, 255, 0.6) 2rpx;
  border-radius: 5rpx;
  color: #404040;
  height: 75rpx;
  width: 423rpx;
  margin: 50rpx;
  position: relative;
}

.inputer {
  width: 348rpx;
  height: 100%;
  position: relative;
  /* border: solid black 1rpx; */
  z-index: 1;
  color: white;
}
.features label {
  position: absolute;
  top: 19rpx;
  left: 10rpx;
  /* border: solid 1rpx black; */
  font-size: 36rpx;
  z-index: 2;
  transition: all 0.5s;
}
/* .features .inputer:focus + label {
  font-size: 24rpx;
  top: 0rpx;
  left: 10rpx;
} */
.chooseicon {
  color: white;
  transform: rotate(90deg);
  width: 73rpx;
  height: 73rpx;
  position: absolute;
  top: 0;
  left: 348rpx;
  /* border: solid black 1rpx; */
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
}
.confirmbtn {
  color: rgb(0, 0, 0, 0.7);
  width: 200rpx;
  height: 75rpx;
  border: solid rgb(255, 255, 255, 0.6) 1rpx;

  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  transition: all 0.2s;
}
.confirmbtn:hover {
  color: white;
}

