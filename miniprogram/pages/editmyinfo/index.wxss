/* pages/editmyinfo/index.wxss */
.body {
  width: 100vw;
  height: 100vh;
  padding: 0;
  margin: 0;
}
.back {
  width: 100vw;
  height: 7%;
  background-color: #5d7c7f;
  display: flex;
  align-items: center;
  color: white;
  padding-left: 20rpx;
  justify-content: space-between;
}
.head {
  width: 100%;
  height: 18%;
  color: #c7c3bd;
  border-bottom: solid #c7c3bd 5rpx;
  display: flex;
}
.ava {
  /* width: 240rpx;
  height: 240rpx; */
  width: 30%;
  height: 100%;
  /* border: solid black 1rpx; */
}
.pic {
  border: solid black 1rpx;
  width: 120rpx;
  height: 120rpx;
  /* margin-top: 20rpx; */
  border-radius: 50%;
  position: relative;
  /* left: 50%-60rppx;
  top: 50%-60rpx; */
  z-index: -1;
}
.edit {
  position: relative;
  z-index: 999;
  left: 58%;
  top: 5%;
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  /* border: solid black 1rpx; */
  background-color: #5d7c7f;
  display: flex;
  align-items: center;
  justify-content: center;
}
.rightpart {
  width: 70%;
  height: 100%;
  /* border: solid black 1rpx; */
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.container {
  width: 70%;
  height: auto;
  /* border: solid black 1rpx; */
}
.name {
  display: inline-block;
  width: 80%;
  height: 55rpx;
  overflow: hidden;
  /* border: solid black 1rpx; */
  font-size: larger;
  line-height: 55rpx;
}
.nameinput {
  height: 55rpx;
  display: inline-block;
  width: 80%;
  font-size: larger;
  line-height: 55rpx;
  /* border: solid black 1rpx; */
}
#cgname {
  float: right;
  width: 10%;
  height: 40rpx;
  /* border: solid red 1rpx; */
}
.middle {
  width: 100%;
  height: 66%;
  background-color: #edeff0;
  /* display: flex;
  flex-direction: column;
  align-items: center; */
}
.grids {
  color: #c7c3bd;
  width: 70%;
  height: 100rpx;
  border-bottom: #c7c3bd solid 4rpx;
  overflow: hidden;
  font-size: larger;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: space-between;
  margin: 0 auto;
}

.bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #83b0b3;
  width: 100%;
  height: 9%;
  font-size: x-large;
  color: white;
}
.feedback {
  display: flex;
  align-items: center;
}
.input {
  width: 400rpx;
  height: 100%;
  /* border: solid black 1rpx; */
  text-align: center;
}

